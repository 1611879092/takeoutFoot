<script>
    layui.use(['element', 'table', 'layer', 'form', 'upload'], function () {
        const element = layui.element, table = layui.table, layer = layui.layer, form = layui.form,
            upload = layui.upload;
        table.init('shops', { //转化静态表格
            page: true
        });
        table.on('tool(shops)', function (obj) { //注：tool是工具条事件名，test是table原始容器的属性 lay-filter="对应的值"
            const data = obj.data; //获得当前行数据
            const layEvent = obj.event; //获得 lay-event 对应的值（也可以是表头的 event 参数对应的值）
            const tr = obj.tr; //获得当前行 tr 的DOM对象
            if (layEvent === 'detail') { //查看
                //do somehing
            } else if (layEvent === 'del') { //删除
                layer.confirm('真的删除行么', function (index) {
                    obj.del(); //删除对应行（tr）的DOM结构，并更新缓存
                    layer.close(index);
                    $.ajax({
                        url: "shops/delete",
                        type: 'POST',
                        dataType: 'json',
                        data: {'id': data.id},
                        success: function (data) {
                            if (data.code == 200) {
                                layer.msg(data.msg);
                            }
                        },
                        error: function (e) {
                            console.log(e)
                        }
                    });
                });
            } else if (layEvent === 'edit') { //编辑
                $("#addShop #name").val(data.name)
                $("#addShop #price").val(data.price)
                console.log(data)
                $("#addShop #claId").val(data.claId)
                $("#addShop #con").val(data.con)
                $("#addShop #picture").attr('src', data.img)
                $("#addShop #shopImg").val(data.img)
                $("#addShop #shopid").val(data.id)
                layer.open({
                    type: 1,
                    content: $('#addShop'), //这里content是一个DOM，注意：最好该元素要存放在body最外层，否则可能被其它的相对元素所影响
                    area: '500px',
                    cancel: function (index, layero) {
                        layer.close(index)
                        $("#addShop input,#addShop textarea").val('');
                        $("#addShop img").attr('src', '');
                        return false;
                    }
                });
            }
        });
        //监听提交
        form.on('submit(formDemo)', function (data) {
            $.ajax({
                url: "shops/add",//待完成
                type: 'POST',//提交方式 GET POST PUT DELETE
                dataType: 'json',
                data: data.field,
                success: function (data) {
                    if (data.code == 200) {
                        layer.msg(data.msg);
                        table.reload('shops', {
                            url: '/back/shops'
                        });
                    }
                },
                error: function (e) {
                    console.log(e)
                }
            });
            return false;
        });

        //选择图片后上传
        const uploadInst = upload.render({
            elem: '#test1' //绑定元素
            , url: '/file/uploading'
            , done: function (res) {
                //上传完毕回调
                $("#picture").attr("src", '/' + res.data.file[0].path.substr(7));
                $("#shopImg").val('/' + res.data.file[0].path.substr(7));
            }, error: function () {
                //请求异常回调
            }
        });
        // 点击新增按钮
        $("#add").click(function () {
            layer.open({
                type: 1,
                content: $('#addShop'), //这里content是一个DOM，注意：最好该元素要存放在body最外层，否则可能被其它的相对元素所影响
                area: '500px',
                cancel: function (index, layero) {
                    layer.close(index)
                    $("#addShop input,#addShop textarea").val('');
                    $("#addShop img").attr('src', '');
                    return false;
                }
            });
        })
    });
</script>
</html>
