<!DOCTYPE html>
<html lang="ch-CN">
<head>
    <title><%= title %></title>
    <% include head.ejs %>
    <link href="/stylesheets/fileinput.min.css" media="all" rel="stylesheet" type="text/css"/>
    <style>
        .panel-body img {
            width: 100%
        }

        .panel-body p {
            word-wrap: break-word;
            word-break: normal;
        }
        .imgBox{position: relative}
        .operation{position: absolute;bottom: 0;left: 0;width: 100%;height: 40px;line-height: 40px;background: rgba(0,0,0,0.7);}
        .operation a{color: #fff;width: 32.19%;display: inline-block;height: 100%;text-align: center}
    </style>
</head>
<body>
<div id="app">
    <div class="page-header">
        <h4>资源库</h4>
    </div>
    <div class="panel panel-default">
        <div class="panel-heading">
            <button type="button" class="btn btn-info pull-right" data-toggle="modal"
                    data-target=".bs-example-modal-lg">新增
            </button>
            <form class="form-inline" id="filterForm" style="display: inline-block">
                <div class="form-group">
                    <input type="text" v-model="keyword" class="form-control" placeholder="请输入关键字">
                </div>
                <button type="button" @click="filter()" class="btn btn-default">筛选</button>
            </form>
        </div>
        <div class="panel-body">
            <div style="margin-top: 15px;" v-if="resourceList.length != 0">
                <div class="col-sm-2" v-for="(res,key) in resourceList">
                    <div class="imgBox">
                        <img :src="'/'+res.path" alt="">
                        <div class="operation">
                            <a href="javascript:;">重命名</a>
                            <a href="javascript:;">替换</a>
                            <a href="javascript:;">删除</a>
                        </div>
                    </div>
                    <p v-text="res.name"></p>
                </div>
            </div>
        </div>
        <div class="panel-footer">
            <div id="page"></div>
        </div>
    </div>

    <!--新增模态框-->
    <div class="modal fade bs-example-modal-lg" id="addModel" tabindex="-1" role="dialog"
         aria-labelledby="myLargeModalLabel">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                                aria-hidden="true">×</span></button>
                    <h4 class="modal-title" id="myLargeModalLabel">新增资源</h4>
                </div>
                <div class="modal-body">
                    <form class="form-horizontal" enctype="multipart/form-data" action="businessInfor/add" id="addForm">
                        <div class="form-group">
                            <div class="col-sm-12">
                                <input type="file" name="inputFile" id="uploadBtn" multiple class="file-loading">
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

</body>
<% include foot.ejs %>
<!--上传插件begin-->
<script src="/javascripts/piexif.min.js" type="text/javascript"></script>
<!-- sortable.min.js is only needed if you wish to sort / rearrange files in initial preview.
    This must be loaded before fileinput.min.js -->
<script src="/javascripts/sortable.min.js" type="text/javascript"></script>
<!-- purify.min.js is only needed if you wish to purify HTML content in your preview for
    HTML files. This must be loaded before fileinput.min.js -->
<script src="/javascripts/purify.min.js" type="text/javascript"></script>
<!-- popper.min.js below is needed if you use bootstrap 4.x. You can also use the bootstrap js
   3.3.x versions without popper.min.js. -->
<script src="/javascripts/popper.min.js"></script>
<script src="/javascripts/fileinput.min.js"></script>
<!-- optionally uncomment line below for loading your theme assets for a theme like Font Awesome (`fa`) -->
<!-- script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-fileinput/4.4.5/themes/fa/theme.min.js"></script -->
<!-- optionally if you need translation for your language then include  locale file as mentioned below -->
<script src="/javascripts/zh.min.js"></script>
<!--上传插件end-->
<script>
    var app = new Vue({
        el: '#app',
        data: {
            distributionTimeID: 1,
            resourceList: [],
            caninvoice: false,
            keyword: '',
            changeBusinessData: []
        },
        created: function () {
            this.getresource()
        },
        methods: {
            delect: function (id) {
                const delect = confirm("确定删除分类？");
                if (delect) {
                    $.ajax({
                        url: "businessInfor/delete",
                        type: 'POST',
                        dataType: 'json',
                        data: {'id': id},
                        success: function (data) {
                            $.globalMessenger().post({
                                message: data.msg,
                                hideAfter: 2,
                                type: 'success',
                                showCloseButton: true
                            });
                        },
                        error: function (e) {
                            console.log(e)
                        }
                    });
                }
            },
            laypage: function (keyword, count) {
                const self = this;
                laypage({
                    cont: 'page',
                    pages: count, //可以叫服务端把总页数放在某一个隐藏域，再获取。假设我们获取到的是18
                    jump: function (e, first) { //触发分页后的回调
                        if (!first) { //一定要加此判断，否则初始时会无限刷新
                            //location.href = '?page=' + e.curr;
                            $.ajax({
                                url: "resource",
                                type: 'POST',
                                data: {'keyword': keyword, 'page': e.curr},
                                dataType: 'json',
                                success: function (data) {
                                    self.resourceList = data.data;
                                },
                                error: function (e) {
                                    console.log(e.responseText)
                                }
                            });
                        }
                    }
                });
            },
            getresource: function () {
                const self = this;
                $.ajax({
                    url: "resource/",
                    type: 'POST',
                    dataType: 'json',
                    data: {'keyword': self.keyword, 'page': 1},
                    success: function (data) {
                        console.log(data)
                        self.resourceList = data.data;
                        self.laypage(self.keyword, data.count);
                    },
                    error: function (e) {
                        console.log(e)
                    }
                });
            },
            filter: function () {
                this.getbusiness()
            }
        }
    });
    $("#uploadBtn").fileinput({
        language: 'zh',
        uploadUrl: 'resource/add',
        allowedFileExtensions: ['jpg', 'png', 'bmp', 'jpeg'],//接收的文件后缀
        overwriteInitial: true,
        dropZoneEnabled: true,
        uploadAsync: false,
        showUpload: true,              //是否显示上传按钮
        showPreview: true,              //展前预览
        showCaption: false,             //是否显示标题
        /*uploadExtraData: function (previewId, index) {
            //向后台传递id作为额外参数，是后台可以根据id修改对应的图片地址。
            var obj = {};
            obj.id = fishId;
            obj.page = 'BusinessInfor';
            return obj;
        },*/
        enctype: 'multipart/form-data',
    }).on("filebatchuploadsuccess", function (event, data) {

    }).on('fileerror', function (event, data, msg) {  //一个文件上传失败
        console.log('文件上传失败！' + msg);
    });
</script>
</html>
